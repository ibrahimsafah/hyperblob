{
  "name": "hyperblob",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/lib/hyperblob.js",
  "types": "dist/lib/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/hyperblob.js",
      "types": "./dist/lib/types.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:wasm": "wat2wasm src/wasm/metaball-contour.wat -o src/wasm/metaball-contour.wasm",
    "build:lib": "npm run build:wasm && tsc && vite build --mode lib",
    "build:app": "npm run build:wasm && tsc && vite build",
    "build": "npm run build:lib && npm run build:app",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "vitest run && playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@webgpu/types": "^0.1.52",
    "typescript": "~5.7.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0"
  }
}
