{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["@webgpu/types"],
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "vite-env.d.ts"]
}
